<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="dog" class="com.benworld.spring.di.Dog">
		<property name="myName" value="poodle"></property>
	</bean>

	<bean id="cat" class="com.benworld.spring.di.Cat">
		<property name="myName" value="vella"></property>
	</bean>
	
	<bean id="petOwner" class="com.benworld.spring.di.PetOwner">
		<constructor-arg ref="cat"></constructor-arg>
	</bean>
</beans>
